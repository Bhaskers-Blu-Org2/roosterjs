{
    "compilerOptions": {
        // "strict": true,
        "jsx": "react",
        "downlevelIteration": true,
        "target": "es5",
        "module": "commonjs",
        "outDir": "../../dist",
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        },
        "lib": ["es6", "dom"]
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"],
    "paths": {
        "roosterjs-*": ["../roosterjs-*"]
    }
}
