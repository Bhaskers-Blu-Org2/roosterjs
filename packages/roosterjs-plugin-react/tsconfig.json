{
    "compilerOptions": {
        "strict": true,
        "jsx": "react",
        "downlevelIteration": true,
        "target": "es5",
        "module": "commonjs",
        "outDir": "../../dist",
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        },
        "rootDir": ".",
        "lib": ["es6", "dom"]
    },
    "include": ["**/*.ts", "**/*.tsx", "roosterjs-plugin-react/lib/ReactPlugin.tsx"]
}
